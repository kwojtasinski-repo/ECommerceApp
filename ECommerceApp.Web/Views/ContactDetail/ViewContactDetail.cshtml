@model ECommerceApp.Application.ViewModels.ContactDetail.ContactDetailsForListVm

@{
    ViewData["Title"] = "ViewContactDetail";
}

    <h1>Szczegóły kontaktu</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-5">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-5">
            Informacje kontakowe
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.ContactDetailInformation)
        </dd>
        <dt class = "col-sm-5">
            Typ informacji kontakowych
        </dt>
        <dd class = "col-sm-5">
            @Html.DisplayFor(model => model.ContactDetailTypeName)
        </dd>
        <dt class = "col-sm-5">
            Dane kontatkowe
        </dt>
        <dd class = "col-sm-5">
            @Html.ActionLink("Kliknij aby zobaczyć", "ViewCustomer", "Customer", new { id = @Model.CustomerId }, new { target = "_blank" })
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edytuj", "EditContactDetail", new { id = Model.Id }) |
    <a asp-route-id="@Model.CustomerId" asp-action="EditCustomer" asp-controller="Customer">Powrót do danych kontaktowych</a>
</div>
