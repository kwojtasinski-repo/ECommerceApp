@using ECommerceApp.Application.Identity.IAM.ViewModels
@model UserDetailsVm
@{ ViewData["Title"] = "User Details"; }

<div class="container mt-4" style="max-width:600px">
    <h2>@Model.UserName</h2>
    @if (TempData["Success"] is string msg)
    {
        <div class="alert alert-success alert-dismissible fade show">@msg<button type="button" class="close" data-dismiss="alert">&times;</button></div>
    }
    <dl class="row">
        <dt class="col-sm-3">Id</dt><dd class="col-sm-9"><code>@Model.Id</code></dd>
        <dt class="col-sm-3">Username</dt><dd class="col-sm-9">@Model.UserName</dd>
        <dt class="col-sm-3">Email</dt><dd class="col-sm-9">@Model.Email</dd>
        <dt class="col-sm-3">Email Confirmed</dt><dd class="col-sm-9">@Model.EmailConfirmed</dd>
        <dt class="col-sm-3">Role</dt><dd class="col-sm-9"><span class="badge badge-info">@Model.UserRole</span></dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
