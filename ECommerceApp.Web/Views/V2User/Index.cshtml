@using ECommerceApp.Application.Identity.IAM.ViewModels
@model UserListVm
@{ ViewData["Title"] = "Users v2"; }

<div class="container mt-4">
    <h2>Users <small class="text-muted">IamDbContext</small></h2>
    @if (TempData["Success"] is string msg)
    {
        <div class="alert alert-success alert-dismissible fade show">@msg<button type="button" class="close" data-dismiss="alert">&times;</button></div>
    }
    <a asp-action="Add" class="btn btn-primary mb-3"><i class="fas fa-plus"></i> Add User</a>
    <p class="text-muted">Total: @Model.Count</p>
    <table class="table table-bordered table-sm">
        <thead class="thead-light">
            <tr><th>Username</th><th>Id</th><th style="width:180px"></th></tr>
        </thead>
        <tbody>
            @foreach (var u in Model.Users)
            {
                <tr>
                    <td>@u.UserName</td>
                    <td><small><code>@u.Id</code></small></td>
                    <td>
                        <a asp-action="Details" asp-route-id="@u.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form method="post" asp-action="Delete" asp-route-id="@u.Id" class="d-inline">
                            <button class="btn btn-sm btn-danger" onclick="return confirm('Delete user?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
