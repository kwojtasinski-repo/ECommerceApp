@model ECommerceApp.Application.ViewModels.Brand.ListForBrandVm

@{
    ViewData["Title"] = "Index";
}

<h1>Lista wszystkich firm przedmiotów</h1>

<p>
    @if (User.IsInRole("Administrator") || User.IsInRole("Manager") || User.IsInRole("Service"))
    {
        <a asp-action="AddBrand">Dodaj nową firmę</a>
    }
    <a asp-action="Index" asp-controller="Item" >Powrót do listy przedmiotów</a>
</p>

<form asp-action="Index" asp-controller="Brand" method="post">
    <div class="row">
        <input type="text" asp-for="SearchString" name="searchString" id="searchString" />
        <input type="submit" value="Wyszukaj" />
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Nazwa
                </th>
                <th>Akcja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Brands)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @if (User.IsInRole("Administrator") || User.IsInRole("Manager") || User.IsInRole("Service"))
                        {
                            @Html.ActionLink("Edytuj", "EditBrand", new { id = item.Id }) @(' ')@('|')@(' ')
                        }
                        @Html.ActionLink("Szczegóły", "ViewBrand", new { id = item.Id })
                        @if (User.IsInRole("Administrator") || User.IsInRole("Manager") || User.IsInRole("Service"))
                        {
                            @(' ')@('|')@(' ') @Html.ActionLink("Usuń", "DeleteBrand", new { id = item.Id })
                        }
                    </td>
    
                    </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <table>
            <tr>
                @for (int i = 1; i <= Math.Ceiling(Model.Count / (double)Model.PageSize); i++)
                {
                    <td>
                        @if (i != Model.CurrentPage)
                        {
                            <a href="javascript:PagerClick(@i)">@i</a>
                        }
                        else
                        {
                            <span>@i</span>
                        }
                    </td>
                }
            </tr>
        </table>
        <input type="hidden" name="pageNo" id="pageNo" />
        <input type="hidden" name="pageSize" id="pageSize" value="2" />
    </div>
</form>

@section Scripts
{
    <script type="text/javascript">
        function PagerClick(index) {
            var token = $('input[name="__RequestVerificationToken"]').val();
            document.getElementById("pageNo").value = index;
            $.ajax({
                url: "/Brand/",
                type: 'POST',
                data: {//int pageSize, int? pageNo, string searchString
                    __RequestVerificationToken: token,
                    pageSize: document.getElementById("pageSize").value,
                    pageNo: index,
                    searchString: document.getElementById("searchString").value
                },
                success: function (data) {
                    console.log("Success")
                    console.log(data);
                    var parser = new DOMParser();
                    var htmlDoc = parser.parseFromString(data, 'text/html');
                    console.log(htmlDoc);
                    var form = htmlDoc.getElementById('reload');
                    console.log(form);
                    jQuery('#reload').html(form);
                },
                error: function (error) {
                    console.log("error is " + error);
                }
            });
        }
    </script>
}