@model ECommerceApp.Application.ViewModels.Brand.BrandVm

@{
    ViewData["Title"] = "AddBrand";
}

<h1>Dodaj firmę dla przedmiotów</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="brandForm" asp-action="AddBrand">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input id="NameInput" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy firm przedmiotów</a>
</div>

@section Scripts {
    <script>
        const brandFormValidator = {
            formId: "brandForm",
            name: {
                controlId: 'NameInput',
                rules: [
                    v => v && v.trim().length > 0 || 'Nazwa firmy jest wymagana',
                    v => v && v.trim().length > 2 || 'Nazwa firmy powinna zawierać więcej niż 2 znaki'
                ],
                valid: false,
                value: ''
            }
        };

        $(document).ready(function () {
            forms.initFormValidator(brandFormValidator);
        });
    </script>
}
