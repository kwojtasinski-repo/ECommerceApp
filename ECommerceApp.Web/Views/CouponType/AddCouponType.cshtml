@model ECommerceApp.Application.ViewModels.CouponType.CouponTypeVm

@{
    ViewData["Title"] = "AddCouponType";
}

<h1>Nowy typ kuponu</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form id="couponTypeForm" asp-action="AddCouponType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Type" class="control-label">Typ kuponu</label>
                <input id="CouponTypeInput" asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy typów kuponów</a>
</div>

@section Scripts {
    <script>
        const couponTypeFormValidator = {
            formId: "couponTypeForm",
            type: {
                controlId: 'CouponTypeInput',
                rules: [
                    v => v && v.trim().length > 0 || 'Nazwa jest wymagana',
                    v => v && v.trim().length > 2 || 'Nazwa powinna zawierać więcej niż 2 znaki',
                ],
                valid: false,
                value: ''
            }
        };

        $(document).ready(function () {
            forms.initFormValidator(couponTypeFormValidator);
        });
    </script>
}
