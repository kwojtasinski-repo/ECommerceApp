@using ECommerceApp.Infrastructure.Permissions;
@model ECommerceApp.Application.ViewModels.Payment.PaymentDetailsVm

@{
    ViewData["Title"] = "ViewPayment";
}

<h1>Szczegóły płatności</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Numer płatności
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            Data płatności
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfOrderPayment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
        <dt class="col-sm-2">
            Imię i nazwisko
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName) @(' ') @Html.DisplayFor(model => model.Customer.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class="col-sm-2">
            Numer zamówienia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Number)
        </dd>
        <dt class="col-sm-2">
            Koszt zamówienia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Cost)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole(UserPermissions.Roles.Administrator) || User.IsInRole(UserPermissions.Roles.Manager) || User.IsInRole(UserPermissions.Roles.Service))
    {
        @Html.ActionLink("Edytuj", "EditPayment", new { id = Model.Id }) @(" | ")
    }
    <a asp-controller="Order" asp-action="ShowMyOrders">Wróć do moich zamówień</a>
</div>
