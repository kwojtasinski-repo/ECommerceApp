@model ECommerceApp.Application.ViewModels.Payment.PaymentDetailsVm

@{
    ViewData["Title"] = "ViewPayment";
}

<h1>Szczegóły płatności</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Numer płatności
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            Data płatności
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfOrderPayment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
        <dt class="col-sm-2">
            Imię i nazwisko
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName) @(' ') @Html.DisplayFor(model => model.Customer.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class="col-sm-2">
            Numer zamówienia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Number)
        </dd>
        <dt class="col-sm-2">
            Koszt zamówienia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Cost)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edytuj", "EditPayment", new { id = Model.Id }) |
        <a asp-controller="Item" asp-action="Index">Wróć do listy przedmiotów</a>
</div>
