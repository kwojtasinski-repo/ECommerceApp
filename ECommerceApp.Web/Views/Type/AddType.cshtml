@model ECommerceApp.Application.ViewModels.Type.TypeVm

@{
    ViewData["Title"] = "AddType";
}

<h1>Dodaj typ produktu</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="typeForm" asp-action="AddType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input id="TypeNameInput" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy typów przedmiotów</a>
</div>

@section Scripts {
    <script>
        const typeFormValidator = {
            formId: "typeForm",
            name: {
                controlId: 'TypeNameInput',
                rules: [
                    v => v && v.trim().length > 0 || 'Nazwa jest wymagana',
                    v => v && v.trim().length > 2 || 'Nazwa powinna zawierać więcej niż 2 znaki',
                ],
                valid: false,
                value: ''
            }
        };

        $(document).ready(function () {
            forms.initFormValidator(typeFormValidator);
        });
    </script>
}
