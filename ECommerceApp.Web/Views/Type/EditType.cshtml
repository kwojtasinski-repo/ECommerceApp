@model ECommerceApp.Application.ViewModels.Type.TypeVm

@{
    ViewData["Title"] = "EditType";
}

<h1>Edycja typu przedmiotów</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form id="typeForm" asp-action="EditType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Type.Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Type.Name" class="control-label">Nazwa</label>
                <input id="TypeNameInput" asp-for="Type.Name" class="form-control" />
                <span asp-validation-for="Type.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zatwierdź" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy typów przedmiotów</a>
</div>

@section Scripts {
    <script>
        const typeFormValidator = {
            formId: "typeForm",
            name: {
                controlId: 'TypeNameInput',
                rules: [
                    v => v && v.trim().length > 0 || 'Nazwa jest wymagana',
                    v => v && v.trim().length > 2 || 'Nazwa powinna zawierać więcej niż 2 znaki',
                    v => v && v.trim().length <= 100 || 'Nazwa nie może mieć więcej niż 100 znaków'
                ],
                valid: false,
                value: ''
            }
        };

        $(document).on('DOMInitialized', function () {
            forms.initFormValidator(typeFormValidator);
        });
    </script>
}
