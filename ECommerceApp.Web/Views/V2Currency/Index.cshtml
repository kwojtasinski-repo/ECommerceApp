@using ECommerceApp.Application.Supporting.Currencies.ViewModels
@model List<CurrencyVm>
@{ ViewData["Title"] = "Currencies v2"; }

<div class="container mt-4">
    <h2>Currencies <small class="text-muted">CurrencyDbContext</small></h2>
    @if (TempData["Success"] is string msg)
    {
        <div class="alert alert-success alert-dismissible fade show">@msg<button type="button" class="close" data-dismiss="alert">&times;</button></div>
    }
    <a asp-action="Add" class="btn btn-primary mb-3"><i class="fas fa-plus"></i> Add Currency</a>
    <table class="table table-bordered table-sm">
        <thead class="thead-light">
            <tr><th>Id</th><th>Code</th><th>Description</th><th style="width:180px"></th></tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td><strong>@c.Code</strong></td>
                    <td>@c.Description</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form method="post" asp-action="Delete" asp-route-id="@c.Id" class="d-inline">
                            <button class="btn btn-sm btn-danger" onclick="return confirm('Delete @c.Code?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
